{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "p3demos/*": ["src/*", "dist/src/*"],
      "app/*": ["src/*", "dist/src/*"]
    },
    "outDir": "dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "files": [
     "node_modules/phaser3-docs/typescript/phaser.d.ts"
  ]
}